
<section id="allSect">
<h2 id="allTitle">Here you can see all the pets you own:</h2>
<div>
  {{#each pets}}

  <div class="card">
    <a href="/singlePet/{{id}}">
    <img src="{{Image_path}}" alt="">
    <h4><b>Name: {{name}}</b></h4>
    <p>Chip ID: {{chipId}}</p>
    <p>Age: {{age}}</p>
    <p>Gender: {{gender}}</p>
    <p>Hair Color: {{hairColor}}</p>
    </a>
  </div>

{{/each}}
</div>
</section>