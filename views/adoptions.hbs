<section id="adoptSect">
<h1>Hi, I'm the adoptions page!</h1>

  <div class="container">
    <div class="adoptLogForm">
      <h2>Add your adoption here:</h2>

      <form action="/adoptions" method="POST" enctype="multipart/form-data">

      <label for="Name">Name:</label>
      <input type="text" name="Name" id="Name" >

      <div class="divider"></div>

      <label for="breed">Breed:</label>
      <input type="text" name="breed" id="breed">

      <div class="divider"></div>


      <label for="birthDate">Birth Date: </label>
      <input type="date" name="birthDate" id="birthDate">

      <div class="divider"></div>

      <label for="Gender">Gender:</label>
      <input type="text" name="Gender" id="Gender">

      <div class="divider"></div>

      <label for="image_path">Image: </label>
      <input type="file" name="image_path" id="image_path">

      <div class="divider"></div>

      <button type="submit" class="but">Add Adoption</button>

      </form>
    </div>
  </div>
</section>

<br>



<div class="row">
  {{#each adopts}}
  <div>
    <div class="card">
      <a href="/adoptions/{{id}}">
        <img src="{{image_path}}" alt="{{image_name}}">
        <h4><b>Name:{{Name}}</b></h4>
        <p>Breed:{{breed}}</p>
        <p>Bith Date:{{birthDate}}</p>
        <p>Gender:{{Gender}}</p>
        
      </a>
    </div>
  </div>
  {{/each}}
</div>
