<h2>Hi, I'm the adoptions page!</h2>

<h2>Add your adoption here:</h2>

<form action="/adoptions" method="POST" enctype="multipart/form-data">

<label for="Name">Name:</label>
<input type="text" name="Name" id="Name">

<br>

<label for="breed">Breed:</label>
<input type="text" name="breed" id="breed">

<br>


<label for="birthDate">Birth Date: </label>
<input type="date" name="birthDate" id="birthDate">

<br>

<label for="Gender">Gender:</label>
<input type="text" name="Gender" id="Gender">

<br>

<label for="image_path"></label>
<input type="file" name="image_path" id="image_path">

<button type="submit">Add Adoption</button>

</form>

<br>

<div class="row">
<div class="column">
{{#each adopts}}
  <div class="card">
    <a href="/adoptions/{{id}}">
      <img src="{{image_path}}" alt="{{image_name}}">
      <h4><b>Name:{{Name}}</b></h4>
      <p>Breed:{{breed}}</p>
      <p>Bith Date:{{birthDate}}</p>
      <p>Gender:{{Gender}}</p>
      
    </a>
  </div>
 {{/each}}
</div>
</div>